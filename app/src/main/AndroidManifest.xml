<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kdc.chatapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_chatapp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_chatapp_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service android:name=".Call.SinchService"></service>
        <activity android:name=".Activity.ImageViewerActivity"></activity>
        <activity
            android:name=".Activity.ChatActivity"
            android:parentActivityName=".Activity.MainActivity" />
        <activity android:name=".Activity.ProfileActivity" />
        <activity
            android:name=".Activity.FindFriendsActivity"
            android:parentActivityName=".Activity.MainActivity" />
        <activity android:name=".Activity.GroupChatActivity" />
        <activity
            android:name=".Activity.SettingsActivity"
            android:parentActivityName=".Activity.MainActivity" />
        <activity android:name=".Activity.RegisterActivity" />
        <activity android:name=".Activity.LoginActivity" />
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity android:name=".Call.CallScreenActivity"/>

        <activity android:name=".Call.IncomingCallScreenActivity" android:screenOrientation="fullSensor"
            android:noHistory="true"/>
    </application>

</manifest>